<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.AdanCancelPage">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_50sdp"
        android:textSize="@dimen/_20sdp"
        android:id="@+id/tvsalat"
        android:textColor="#588"
        android:text="حان وقت الصلاة"
        android:fontFamily="@font/kofy3"
        android:textStyle="bold"/>
    <pl.droidsonroids.gif.GifImageView
        android:layout_below="@id/tvsalat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_500sdp"
        android:src="@drawable/ddddddddddddddddddddddddddd"/>
    <ImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_cancel_black_24dp"
        android:id="@+id/adan_cancel_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>