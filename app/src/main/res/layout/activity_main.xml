    <LinearLayout
        android:layout_below="@id/menu_btn"
        android:id="@+id/linear_options"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/fragment_dealer_home_tv_departments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/font5"
            android:text="القائمة"
            android:textColor="#fff"
            android:textSize="20sp"
            />
        <Button
            android:background="@drawable/bu_back"
            android:layout_marginTop="50dp"



            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/font5"
            android:textSize="15sp"
            android:drawableStart="@drawable/ic_import_contacts_black_24dp"

            android:textColor="#ffffff"

            android:layout_height="50dp"
            android:text="قراءة قران(ترجمة وتفسير بالانترنت)"
            android:layout_margin="5dp"
            android:id="@+id/readbtn"/>
        <Button
            android:background="@drawable/bu_back"
            android:layout_marginTop="20sp"



            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/font5"
            android:textSize="15sp"
            android:drawableStart="@drawable/ic_audiotrack_black_24dp"

            android:textColor="#ffffff"

            android:layout_height="wrap_content"
            android:text="سماع قران(يتطلب انترنت)"
            android:layout_margin="5dp"
            android:id="@+id/listenbtn"/>
        <Button
            android:background="@drawable/bu_back"
            android:layout_marginTop="20sp"



            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/font5"
            android:textSize="15sp"
            android:drawableStart="@drawable/ic_description_black_24dp"

            android:textColor="#ffffff"
            android:layout_height="50dp"
            android:text="تفسير الجلالين"
            android:layout_margin="5dp"
            android:id="@+id/tafseerglalin"/>
        <Button
            android:background="@drawable/bu_back"
            android:layout_marginTop="20sp"



            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/font5"
            android:textSize="15sp"
            android:drawableStart="@drawable/ic_audiotrack_black_24dp"

            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="سماع اذكار(يتطلب انترنت)"
            android:layout_margin="5dp"
            android:id="@+id/listenazkarbtn"/>

        <Button
            android:background="@drawable/bu_back"
            android:layout_marginTop="20sp"



            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/font5"
            android:textSize="15sp"
            android:drawableStart="@drawable/ic_settings_black_24dp"

            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:text="اعدادات الاذكار"
            android:layout_margin="5dp"
            android:id="@+id/btn_setting"/>
        <Button
            android:background="@drawable/bu_back"
            android:layout_marginTop="50dp"



            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/font5"
            android:textSize="15sp"
            android:drawableStart="@drawable/ic_apps_black_24dp"

            android:textColor="#ffffff"
            android:layout_height="50dp"
            android:text="مواقيت الصلاة"
            android:layout_margin="5dp"
            android:id="@+id/salat_btn"/>
        <Button
            android:background="@drawable/bu_back"
            android:layout_marginTop="50dp"



            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/font5"
            android:textSize="15sp"
            android:drawableStart="@drawable/ic_exposure_black_24dp"

            android:textColor="#ffffff"
            android:layout_height="50dp"
            android:text="المسبحة الالكترونية"
            android:layout_margin="5dp"
            android:id="@+id/electronic_btn"/>


        <Button
            android:background="@drawable/bu_back"
            android:layout_marginTop="50dp"



            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/font5"
            android:textSize="15sp"
            android:drawableStart="@drawable/ic_access_alarms_black_24dp"

            android:textColor="#ffffff"
            android:layout_height="50dp"
            android:text="منبه السحور"
            android:layout_margin="5dp"
            android:id="@+id/sohor_alarm_btn"/>
        <Button
            android:background="@drawable/bu_back"
            android:layout_marginTop="50dp"



            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/font5"
            android:textSize="15sp"
            android:drawableStart="@drawable/ic_exit_to_app_black_24dp"

            android:textColor="#ffffff"
            android:layout_height="50dp"
            android:text="خروج من البرنامج"
            android:layout_margin="5dp"
            android:id="@+id/exit_btn"/>



    </LinearLayout>
    <ImageView
        android:layout_width="40dp"

        android:layout_height="40dp"
        android:src="@drawable/ic_menu_black_24dp"
        android:layout_alignParentRight="true"
        android:id="@+id/menu_btn"/>







