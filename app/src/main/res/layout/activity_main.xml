<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:background="#005b96"
    android:layout_height="match_parent"
    tools:context=".view.activity.MainActivity">



    <TextView
        android:textStyle="bold"
        android:fontFamily="@font/kofy2"
        android:textSize="50sp"
        android:layout_centerInParent="true"
        android:textColor="#fff"
        android:text="بسم اللــه الرحمــن الرحــيم"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="200dp"

        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:visibility=""
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:id="@+id/linear"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView


            android:layout_width="50dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/quran"
            android:textSize="25sp"
            android:src="@drawable/ic_import_contacts_black_24dp"

            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_height="50dp"
            android:text="قراءة قران"
            android:layout_margin="10dp"
            android:id="@+id/readbtn"/>


            <ImageView
                android:layout_marginTop="10dp"


                android:layout_weight="1"

                android:src="@drawable/ic_audiotrack_black_24dp"
                android:layout_width="50dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/quran"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:text="سماع قران"
                android:id="@+id/listenbtn"/>


        <ImageView
            android:src="@drawable/ic_description_black_24dp"

            android:fontFamily="@font/quran"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_width="50dp"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="تفسير الجلالين"
            android:id="@+id/tafseerglalin"/>



    </LinearLayout>



</RelativeLayout>