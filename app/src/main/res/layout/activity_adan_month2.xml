<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_40sdp"
    >
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/sw_adan"
        android:checked="false"
        android:thumb="@drawable/ic_brightness_1_black_24dp"
        android:track="@drawable/switchtrack"
        />
    <TextView
        android:layout_marginLeft="@dimen/_20sdp"
        android:textColor="#942"
        android:fontFamily="@font/kofy2"
        android:id="@+id/adan_service_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_20sdp"
        android:layout_toRightOf="@id/sw_adan"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@id/sw_adan"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:id="@+id/prayings_rv"/>
    <TextView
        android:layout_alignParentRight="true"

        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/prayings_rv"
        android:text="1-يرجي التحديث بالانترنت  مع بداية كل شهر"
        android:textColor="#924"
        android:fontFamily="@font/quran"
        />
    <TextView
        android:layout_marginRight="@dimen/_10sdp"

        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_15sdp"
        android:layout_below="@id/prayings_rv"
        android:text="2-هذه الاحصائيات وفقا للتوقيت المحلي لمدينة القاهرة"
        android:textColor="#924"
        android:fontFamily="@font/quran"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:id="@+id/reload_btn"
        android:background="@drawable/dorin"
        android:src="@drawable/ic_refresh_black_24dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>