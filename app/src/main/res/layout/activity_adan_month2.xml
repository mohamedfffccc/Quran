<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".view.activity.adanmonth.AdanMonth">
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:id="@+id/sw_adan"
        android:checked="false"
        android:thumb="@drawable/ic_brightness_1_black_24dp"
        android:track="@drawable/switchtrack"
        />
    <TextView
        android:layout_marginLeft="@dimen/_20sdp"
        android:textColor="#fff"
        android:fontFamily="@font/kofy2"
        android:id="@+id/adan_service_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_20sdp"
        android:layout_toRightOf="@id/sw_adan"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@id/sw_adan"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:id="@+id/prayings_rv"/>
    <TextView
        android:layout_alignParentRight="true"

        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/prayings_rv"
        android:textStyle="bold"
        android:text="1-يرجي التحديث بالانترنت في بداية كل شهر"
        android:textColor="#000"
        android:fontFamily="@font/font5"
        />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/prayings_rv"
        android:textStyle="bold"
        android:text="2-هذه الاحصائيات وفقا للتوقيت المحلي لمدينة القاهرة"
        android:textColor="#000"
        android:fontFamily="@font/font5"
        />
    <ImageView
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:src="@drawable/ic_prayer_time"
        android:layout_alignParentBottom="true"
        android:id="@+id/imv_compass"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/reload_btn"
        android:src="@drawable/ic_refresh_black_24dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>