<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".view.activity.muslimadan.AdhanMoquite">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="اليوم"
      android:layout_centerHorizontal="true"        
        android:layout_marginTop="0dp"
        android:textColor="#fff"
        android:fontFamily="@font/font5"
        android:id="@+id/activity_adan_tv_date"/>
    <TextView
android:layout_below="@id/activity_adan_tv_date"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="اليوم"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="100dp"
        android:textColor="#fff"
        android:fontFamily="@font/font5"
        android:id="@+id/activity_adan_tv_date_name"/>
    <LinearLayout
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:id="@+id/lin_salat"
        android:layout_width="match_parent"
        android:layout_below="@id/activity_adan_tv_date_name"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        >
     <TextView
         android:layout_gravity="center"
         android:fontFamily="@font/quran"
         android:layout_marginTop="20dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/fajr_tv"
         android:textColor="#000"
         android:textStyle="bold"
         android:textSize="@dimen/_20sdp"
         android:text="الفجر"/>
        <TextView
            android:layout_gravity="center"
            android:fontFamily="@font/quran"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sunset_tv"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:text="الفجر"/>
        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/duhr_tv"
            android:textColor="#000"
            android:fontFamily="@font/quran"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:text="الفجر"/>
        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/asr_tv"
            android:textColor="#000"
            android:fontFamily="@font/quran"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:text="الفجر"/>
        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/magrib_tv"
            android:textColor="#000"
            android:fontFamily="@font/quran"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:text="الفجر"/>
        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isha_tv"
            android:textColor="#000"
            android:fontFamily="@font/quran"
            android:textStyle="bold"
            android:textSize="@dimen/_20sdp"
            android:text="الفجر"/>

    </LinearLayout>
    <ImageView
        android:visibility="gone"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/comoas2"
        android:layout_below="@id/lin_salat"
        android:id="@+id/iv_compass"/>

</RelativeLayout>