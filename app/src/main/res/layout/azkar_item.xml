<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:background="#123" android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_margin="10dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/logo"
        android:id="@+id/reader_ivimg"/>
    <RelativeLayout
        android:layout_width="300dp"
        android:background="#fff"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/reader_ivimg"
        >


        <TextView
            android:fontFamily="@font/quran"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="محمد احمد"
            android:id="@+id/teader_tvname"
            android:layout_centerVertical="true"/>
        <TextView
            android:fontFamily="@font/font5"
            android:layout_marginLeft="100dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:layout_margin="10dp"

            android:text="محمد "
            android:id="@+id/teader_tvtitle"
            android:layout_toLeftOf="@id/teader_tvname" />

    </RelativeLayout>
    <ImageView
        android:layout_marginTop="20sp"
        android:fontFamily="@font/font5"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_play_arrow_black_24dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/teader_btn_pause"
        android:layout_margin="10dp"
        android:text="محمد احمد"
        android:id="@+id/teader_btn_play"
        android:layout_centerVertical="true"/>

    <ImageView
        android:fontFamily="@font/kofy"
        android:layout_marginTop="20sp"

        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_file_download_black_24dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:text="محمد احمد"
        android:id="@+id/teader_btn_download"
        android:layout_centerVertical="true"/>
    <ImageView
        android:fontFamily="@font/kofy"
        android:layout_marginTop="20sp"
       android:visibility="gone"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_pause_black_24dp"
        android:layout_toRightOf="@id/teader_btn_download"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="محمد احمد"
        android:id="@+id/teader_btn_pause"
        android:layout_centerVertical="true"/>
    <SeekBar
        android:visibility="gone"
        android:progressDrawable="@drawable/seekbar_progress"
        android:layout_width="match_parent"
        android:layout_below="@id/reader_ivimg"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/reader_seek"/>
</RelativeLayout>