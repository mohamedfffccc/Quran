<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    tools:context="com.example.quranonline.view.activity.HomePageActivIty">
    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        app:tabTextAppearance="?android:attr/textAppearanceLarge"
      android:background="#e0e0e0"
        android:layout_height="wrap_content"
        android:id="@+id/restaurantorders_tabhome"
        />
    <androidx.viewpager.widget.ViewPager
        android:layout_below="@id/restaurantorders_tabhome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/restaurantorders_viewhome"
        />
</RelativeLayout>
