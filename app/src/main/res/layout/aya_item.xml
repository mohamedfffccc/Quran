<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
android:background="@drawable/aya_back"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rela1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:id="@+id/ayatext"
            android:text="بسسسسسسسم الله"
            android:textColor="#000000"
            android:textStyle="bold"
            android:fontFamily="@font/quran"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"/>
        <Button
            android:layout_marginTop="20dp"
            android:background="@drawable/bu_back"
            android:layout_width="wrap_content"
            android:fontFamily="@font/bold"
            android:layout_height="wrap_content"
            android:layout_below="@id/ayatext"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:layout_margin="@dimen/dim_5dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:id="@+id/translate"
            android:text="ترجمــة"/>
        <Button
            android:background="@drawable/bu_back"
            android:layout_marginTop="20dp"

            android:layout_width="wrap_content"
            android:fontFamily="@font/bold"
            android:layout_height="wrap_content"
            android:layout_below="@id/ayatext"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:layout_margin="@dimen/dim_5dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:id="@+id/tafseermusr"
            android:text="تفسير ميسر"/>



    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/rela1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="10dp"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/ayatexttranslation"
                android:text="dgsjvdjdl"
                android:textColor="#840027"
                android:textStyle="bold"
                android:fontFamily="@font/quran"
                android:layout_marginTop="20sp"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_margin="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/ayatafseer"
                android:textColor="#840027"
                android:layout_below="@id/ayatexttranslation"
                android:textStyle="bold"
                android:fontFamily="@font/quran"
android:layout_marginTop="20sp"                android:layout_alignParentRight="true"/>

        </RelativeLayout>
    </ScrollView>





</RelativeLayout>